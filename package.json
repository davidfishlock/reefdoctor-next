{
    "name": "reefdoctor-next",
    "version": "0.1.0",
    "private": true,
    "prisma": {
        "seed": "ts-node speciesData/seed.ts"
    },
    "scripts": {
        "next:dev": "next dev",
        "next:build": "next build",
        "next:start": "next start",
        "lint:fix": "next lint --fix",
        "lint:check": "next lint",
        "format:fix": "npx prettier --ignore-path .gitignore --write \"./**/*.{ts,tsx,json,md,html,scss}\"",
        "format:check": "npx prettier --ignore-path .gitignore \"./**/*.{ts,tsx,json,md,html,scss}\"",
        "types:check": "npx tsc -p tsconfig.json",
        "test": "jest",
        "cypress:open": "cypress open",
        "cypress:run": "cypress run",
        "e2e": "start-server-and-test next:start http://127.0.0.1:3000 cypress:open",
        "e2e:headless": "start-server-and-test next:start http://127.0.0.1:3000 cypress:run"
    },
    "dependencies": {
        "@chakra-ui/focus-lock": "^2.0.14",
        "@chakra-ui/icons": "^2.0.15",
        "@chakra-ui/react": "^2.4.6",
        "@emotion/react": "^11.10.5",
        "@emotion/styled": "^11.10.5",
        "@prisma/client": "^4.2.1",
        "focus-visible": "^5.2.0",
        "framer-motion": "^8.1.8",
        "next": "^13.1.1",
        "next-pwa": "^5.6.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-hotkeys-hook": "^4.3.2",
        "react-icons": "^4.3.1",
        "react-swipeable": "^7.0.0",
        "sharp": "^0.31.3",
        "swr": "^2.0.0",
        "url-join": "^4.0.1"
    },
    "devDependencies": {
        "@testing-library/dom": "^8.19.1",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/jest": "^29.2.5",
        "@types/node": "^15.14.9",
        "@types/react": "^18.0.26",
        "@types/react-dom": "^18.0.10",
        "@types/url-join": "^4.0.1",
        "babel-plugin-transform-remove-console": "^6.9.4",
        "csv-parser": "^3.0.0",
        "cypress": "^8.6.0",
        "eslint": "7.32.0",
        "eslint-config-next": "^13.1.1",
        "eslint-config-prettier": "^8.3.0",
        "i": "^0.3.7",
        "jest": "^29.3.1",
        "jest-environment-jsdom": "^29.3.1",
        "jest-mock-extended": "^2.0.4",
        "next-router-mock": "^0.8.0",
        "npm": "^8.18.0",
        "prettier": "^2.4.1",
        "prettier-plugin-organize-imports": "^2.3.4",
        "prisma": "^4.2.1",
        "start-server-and-test": "^1.14.0",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.2",
        "typescript": "^4.4.3"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "testMatch": [
            "**/*.test.(ts|tsx)"
        ],
        "clearMocks": true,
        "setupFilesAfterEnv": [
            "@testing-library/jest-dom/extend-expect",
            "<rootDir>/__mocks__/prisma/client.ts"
        ]
    }
}
